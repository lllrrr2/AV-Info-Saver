{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2021",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
